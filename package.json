{
  "name": "@gnosnay/cli-highlight",
  "version": "0.0.0-development",
  "description": "Syntax highlighting in your terminal",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE.txt"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "highlight": "bin/highlight.js"
  },
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "FORCE_COLOR=1 node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint 'src/**/*.ts'",
    "prettier": "prettier --write --list-different '**/{*.ts,*.json,*.cjs,.prettierrc}'",
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "typedoc": "typedoc --media media --mode file --excludeNotExported --out typedoc src/index.ts",
    "semantic-release": "semantic-release"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "(/test/.*|/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/src/test/__fixtures__/"
    ],
    "coverageReporters": [
      "json",
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failComment": false
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gnosnay/cli-highlight.git"
  },
  "keywords": [
    "terminal",
    "syntax",
    "highlight",
    "color",
    "cli",
    "ansi"
  ],
  "author": "Felix Becker <felix.b@outlook.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gnosnay/cli-highlight/issues"
  },
  "homepage": "https://github.com/Gnosnay/cli-highlight#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "highlight.js": "^11.11.1",
    "parse5": "^8.0.0",
    "parse5-htmlparser2-tree-adapter": "^8.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@sourcegraph/eslint-config": "^0.37.1",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsdoc": "^62.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-rxjs": "^5.0.3",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  }
}